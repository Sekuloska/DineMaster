@model IEnumerable<Restaurant.Domain.Domain.Order>

<h1>Your Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Restaurant</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Delivery Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Restaurant?.Name</td>
                <td>@order.OrderDate?.ToString("yyyy-MM-dd")</td>
                <td>@order.TotalAmount</td>
                <td>@order.Status</td>
                <td>
                    <a href="@Url.Action("Details", new { id = order.Id })" class="btn btn-primary">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
