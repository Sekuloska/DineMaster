@model Menu

<h1>Create Menu</h1>

<form asp-controller="Menu" asp-action="CreateMenu" style="color:black;" class="content" >
    <div class="form-group">
        <label asp-for="Name" class="control-label" style="color:white;"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label" style="color:white;"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsActive" class="control-label" style="color:white;"></label>
        <input type="checkbox" asp-for="IsActive" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label class="control-label">Select Restaurant</label>
        <select asp-for="RestaurantId" asp-items="ViewBag.RestaurantList" class="form-control">
            <option value="">-- Select a Restaurant --</option>
        </select>
    </div>

    <div class="form-group d-flex justify-content-center">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" asp-controller="Restaurants" class="btn ml-3">Back</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

