

@model List<Restaurant>

<h1>Restaurants</h1>

<p>
    <a asp-action="Create" class="create">Create New</a>
</p>

<div class="container">
    <div class="row justify-content-center">
        @for (int i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
            <div class="col-md-3 mb-4 d-flex align-items-stretch">
                <div class="card" style="width: 100%; height:100%;">
                    <img class="card-img-top" src="@item.RestaurantImage" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Name: @item.Name</h5>
                        <p class="card-text">Description: @item.Description</p>
                        <p class="card-text">Address: @item.Address</p>
                        <p class="card-text">Opening hours: @item.OpeningHours</p>
                        <h6>Rating: @item.Rating</h6>
                        <div class="mt-auto">
                        <a asp-controller="Menu" asp-action="ListMenusForRestaurant" asp-route-restaurantId="@item.Id" class="create">Menus</a>
                        <a asp-controller="Restaurant" asp-action="Delete" asp-route-id="@item.Id" class="create">Delete</a>
                        <a asp-controller="Restaurant" asp-action="Edit" asp-route-id="@item.Id" class="create">Edit</a>
                    </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .create {
        display: inline-block;
        padding: 10px 20px;
        background-color: rgba(180, 178, 178, 0.5);
        color: #fff;
        text-align: center;
        text-decoration: none;
        border: none;
        
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease, transform 0.2s ease, color 0.3s ease;
    }

        .create:hover {
            background-color: rgba(180, 178, 178, 0.7);
            color: black;
            transform: scale(1.1);
        }

        .create:focus {
            outline: none;
        }

        .create:active {
            transform: scale(0.95);
        }

    .card {
        text-align: center;
    }

    .card-img-top {
        height: 200px; 
        object-fit: cover;
    }
    
    .card-body {
        display: flex;
        flex-direction: column;
    }

    
    .mt-auto {
        margin-top: auto;
    }
    
    .row {
        justify-content: center;
    }
</style>
