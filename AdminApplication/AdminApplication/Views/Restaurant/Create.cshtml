@model Restaurant

<h1>Create a Reastaurant</h1>


<div class="row">
    <div class="content">
        <form asp-action="CreateRestaurant">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label" style="color:white;"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label" style="color:white;"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone" class="control-label" style="color:white;"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label" style="color:white;"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpeningHours" class="control-label" style="color:white;"></label>
                <input asp-for="OpeningHours" class="form-control" />
                <span asp-validation-for="OpeningHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label" style="color:white;"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label" style="color:white;"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RestaurantImage" class="control-label" style="color:white;"></label>
                <input asp-for="RestaurantImage" class="form-control" />
                <span asp-validation-for="RestaurantImage" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="create" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="color:black; text-decoration:none; font-weight:600;" class="create">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<style>
    .create {
        display: inline-block;
        padding: 12px 24px;
        background-color: rgba(180, 178, 178, 0.5);
        color: black;
        text-align: center;
        text-decoration: none;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease, transform 0.2s ease, color 0.3s ease;
    }

        .create:hover {
            background-color: rgba(180, 178, 178, 0.5);
            color: black;
            transform: scale(1.1);
        }

        .create:focus {
            outline: none;
        }

        .create:active {
            transform: scale(0.95);
        }

    .content {
        color: white !important;
        background-color: rgba(0, 0, 0, 0.5);
        padding: 20px;
        margin: 20px auto;
        width: 80%;
        border-radius: 10px;
    }

        .content dl dt, .content dl dd {
            font-size: 18px;
        }

        .content hr {
            color: white;
            border-top: 2px solid white;
        }
</style>
